{
  "name": "CSSModulesExample",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "tsc": "tsc --project . --noEmit",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "lint": "eslint . && stylelint 'src/**/*.@(css|scss)'",
    "web": "webpack-dev-server --mode development",
    "ios": "react-native run-ios",
    "android": "react-native run-android"
  },
  "dependencies": {
    "es6-shim": "^0.35.4",
    "react": "16.6.3",
    "react-art": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-fontawesome": "^1.6.1",
    "react-native": "0.58.6",
    "react-native-fontawesome": "5.7.0",
    "react-native-web": "^0.10.0",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@types/jest": "^24.0.5",
    "@types/prop-types": "^15.5.9",
    "@types/react-fontawesome": "^1.6.4",
    "@types/react-native": "kristerkari/react-native-types-for-css-modules#v0.57.36",
    "@types/react-test-renderer": "^16.0.3",
    "@typescript-eslint/parser": "^1.3.0",
    "autoprefixer": "^9.4.7",
    "babel-jest": "24.1.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-react-native-classname-to-style": "^1.2.2",
    "babel-plugin-react-native-platform-specific-extensions": "^1.1.1",
    "babel-preset-react": "^7.0.0-beta.3",
    "css-loader": "1.0.1",
    "eslint": "^5.14.0",
    "eslint-plugin-css-modules": "^2.11.0",
    "file-loader": "^3.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest-cli": "^24.1.0",
    "metro-react-native-babel-preset": "^0.51.1",
    "node-sass": "^4.11.0",
    "postcss": "^7.0.14",
    "postcss-loader": "^3.0.0",
    "react-hot-loader": "3.1.3",
    "react-native-typed-css-transformer": "^0.10.1",
    "react-native-typed-sass-transformer": "^0.10.1",
    "react-test-renderer": "16.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "9.9.0",
    "stylelint-config-react-native-css-modules": "^2.1.0",
    "stylelint-react-native": "^2.0.1",
    "ts-loader": "^5.3.3",
    "typescript": "^3.3.3",
    "typings-for-css-modules-loader": "^1.7.0",
    "webpack": "^4.29.4",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "IE 11",
    "Android >= 4.4",
    "iOS >= 8"
  ],
  "jest": {
    "preset": "react-native",
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy"
    },
    "testMatch": [
      "**/__tests__/**/*.(js|ts)?(x)",
      "**/?(*.)+(spec|test).(js|ts)?(x)"
    ],
    "transformIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/?!(react-native)"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)?$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "jest": true
    },
    "plugins": [
      "css-modules"
    ],
    "extends": [
      "plugin:css-modules/recommended"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-react-native-css-modules",
    "rules": {
      "selector-class-pattern": "^[a-z][a-zA-Z0-9]*$",
      "declaration-block-no-duplicate-properties": true,
      "no-duplicate-selectors": true,
      "no-extra-semicolons": true,
      "no-eol-whitespace": true,
      "no-missing-end-of-source-newline": true
    }
  }
}
